<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:id="@+id/eventCv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#f5f5f5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:id="@+id/eventNameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="10dp"
                android:text="Event Name" />

            <TextView
                android:id="@+id/eventDateTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/black"
                android:layout_below="@id/eventNameTv"
                tools:layout_editor_absoluteX="10dp"
                android:text="Event Date" />

            <LinearLayout
                android:id="@+id/eventTimeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/eventDateTv">

                <TextView
                    android:id="@+id/eventStartTimeTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    tools:layout_editor_absoluteX="10dp"
                    android:text="Event Start Time" />

                <TextView
                    android:id="@+id/eventToTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    tools:layout_editor_absoluteX="10dp"
                    android:text="TO" />

                <TextView
                    android:id="@+id/eventEndTimeTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textAlignment="textEnd"
                    tools:layout_editor_absoluteX="10dp"
                    android:text="Event End Time" />

            </LinearLayout>

            <TextView
                android:id="@+id/eventTypeTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/black"
                tools:layout_editor_absoluteX="10dp"
                android:layout_below="@id/eventTimeLayout"
                android:text="Event Type" />

            <TextView
                android:id="@+id/eventVenueTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/black"
                tools:layout_editor_absoluteX="10dp"
                android:layout_below="@id/eventTypeTv"
                android:text="Event Venue" />

            <TextView
                android:id="@+id/eventPriceTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/black"
                tools:layout_editor_absoluteX="10dp"
                android:layout_below="@id/eventVenueTv"
                android:text="Event Price" />

            <Button
                android:id="@+id/eventRegBtn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:layout_below="@id/eventPriceTv"
                android:text="Register"
                android:textStyle="bold"
                android:textSize="14sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</layout>